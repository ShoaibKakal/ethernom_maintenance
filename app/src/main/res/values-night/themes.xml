<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ethernom_maintenance" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimary</item>

        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/nunito_font</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_40dp</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:importantForAutofill" tools:ignore="NewApi">noExcludeDescendants</item>
        <item name="android:paddingBottom">@dimen/dimen_10dp</item>
        <item name="android:autofillHints" tools:ignore="NewApi">34</item>
        <item name="paddingStart">@dimen/dimen_10dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/dimen_15dp</item>
    </style>

    <style name="SingleLineTextView">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>